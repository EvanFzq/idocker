{
  "name": "idocker",
  "private": true,
  "version": "1.6.0",
  "scripts": {
    "dev": "yarn dev:web & yarn dev:server",
    "dev:web": "vite -c ./packages/web/vite.config.ts",
    "dev:server": "yarn build:server-w & nodemon ./packages/server/dist/index.cjs",
    "build:web": "cd ./packages/web && vite build",
    "build:server-w": "cd ./packages/server && vite build -w",
    "build:server": "cd ./packages/server && vite build",
    "build": "yarn build:server && yarn build:web",
    "prepare": "husky install",
    "lint": "npx eslint --ext .vue,.ts --fix packages/common packages/server/src packages/web/src",
    "format": "prettier  packages/common packages/server/src packages/web/src --write",
    "image": "yarn build && docker buildx build -t evanfzq/idocker:latest --platform=linux/arm,linux/arm64,linux/amd64 . --push",
    "image:beta": "yarn build && docker buildx build -t evanfzq/idocker:beta --platform=linux/arm,linux/arm64,linux/amd64 . --push",
    "start": "pm2-runtime start pm2.config.js  --env production",
    "release": "standard-version"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.4",
    "@nestjs/core": "^10.2.4",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.2.4",
    "@nestjs/serve-static": "^4.0.0",
    "axios": "^1.5.0",
    "camelcase-keys": "^9.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cropperjs": "^1.6.1",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.9",
    "dockerode": "^3.3.5",
    "lodash-es": "^4.17.21",
    "material-icons": "^1.13.11",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pm2": "^5.3.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sharp": "^0.32.6",
    "uuid": "^9.0.0",
    "vant": "^4.6.8",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "@swc/core": "^1.3.83",
    "@types/crypto-js": "^4.1.3",
    "@types/dockerode": "^3.3.19",
    "@types/lodash-es": "^4.17.9",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "@vitejs/plugin-vue": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "electron-vite": "^1.0.27",
    "eslint": "^8.49.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-vue": "^9.17.0",
    "husky": "^8.0.3",
    "less": "^4.2.0",
    "prettier": "^3.0.3",
    "standard-version": "^9.5.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-pwa": "^0.16.5",
    "vue-eslint-parser": "^9.3.1",
    "vue-tsc": "^1.8.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
